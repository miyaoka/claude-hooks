      {
        "command": "rm",
        "action": "log",
        "reason": "削除操作を記録"
      },
      {
        "stdout": "(password|secret|api_key)\\s*[:=]",
        "action": "block",
        "reason": "機密情報が出力に含まれています"
      }
    ]
  }
